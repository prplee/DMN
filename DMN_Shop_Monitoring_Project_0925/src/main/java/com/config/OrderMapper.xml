<mapper namespace="OrderMapper">

	<select id="saleList" resultType="OrderDTO" parameterType="hashmap">
	select * 
	  from orderinfo
	  	where orderdate = to_char(sysdate,'yyyy/mm/dd')
		<if test='yn.equals("N")'>
		and complete_yn = 'N'
		</if>
	</select>
	
